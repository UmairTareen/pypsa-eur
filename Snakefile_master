from snakemake.utils import min_version

min_version("7.7")


rule run_snakefile_reff:
    output: touch("run_snakefile_reff.done")
    log: "logs/run_snakefile_reff.done",
    shell:
        "snakemake --snakefile Snakefile_reff --cores 1 -call all"

rule run_snakefile_bau:
    input: "run_snakefile_reff.done"
    output: touch("run_snakefile_bau.done")
    log: "logs/run_snakefile_bau.done",
    shell:
        "snakemake --snakefile Snakefile_bau_myopic --cores 1 -call all"

rule run_snakefile_nocdr:
    input: "run_snakefile_bau.done"
    output: touch("run_snakefile_nocdr.done")
    log: "logs/run_snakefile_nocdr.done",
    shell:
        "snakemake --snakefile Snakefile_nocdr_myopic --cores 1 -call all"


rule run_all_snakefiles:
    input: "run_snakefile_nocdr.done"


configfile: 'config/config_postprocessing.yaml'

rule run_prepare_sepia:
    input: "run_snakefile_nocdr.done"
    output: touch("run_prepare_sepia.done")
    log: "logs/run_prepare_sepia.done"
    shell:
        "snakemake --snakefile Snakefile1 --cores 1 -call prepare_sepia"
        
        
configfile: "config/config_postprocessing.yaml" 
rule prepare_sepia:
    params:
        countries=config["countries"],
        planning_horizons=config["scenario"]["planning_horizons"],
        sector_opts=config["scenario"]["sector_opts"],
        scenario=config["scenario"],
        studies=config["studies"],
    input:
        networks=expand(
            "results/{study}/postnetworks/elec_s{simpl}_{clusters}_l{ll}_{opts}_{sector_opts}_{planning_horizons}.nc",study=config["studies"],
            **config["scenario"]
        ),
        costs = "data/costs_2050.csv",
        
    output:
        excelfile=expand("results/{study}/sepia/inputs{country}.xlsx", study=config["studies"],country=config["countries"]),
    threads: 1
    resources:
        mem_mb=10000,
    log:
        "logs/prepare_sepia.log",
    benchmark:
        "benchmarks/prepare_sepia",
    conda:
        "envs/environment.yaml"
    script:
        "SEPIA/excel_generator.py"


